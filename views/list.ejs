

  <%- include("header") -%> 
    <div class="box" id="heading"><h1><%= List_Title %> </h1></div>
    

    <div class="box">
    
      <% newItem.forEach(element => { %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onChange="this.form.submit()" name="check" value="<%=element._id%>">
          <p><%= element.name %> </p>
      </div>
      <input type="hidden" name="listName" value="<%= List_Title %>">
    </form>
    <% }); %>

    <form class="item" action="/" method="post">
      <input type="text" name = "nextItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="btn" value="<%= List_Title %>">+</button>
    </form>
  </div>
    
  

<%- include("footer") -%> 

